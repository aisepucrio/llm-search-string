@article{10.1109/TCBB.2020.3020016,
author = {Yadav, Shweta and Ramesh, Srivatsa and Saha, Sriparna and Ekbal, Asif},
title = {Relation Extraction From Biomedical and Clinical Text: Unified Multitask Learning Framework},
year = {2020},
issue_date = {March-April 2022},
publisher = {IEEE Computer Society Press},
address = {Washington, DC, USA},
volume = {19},
