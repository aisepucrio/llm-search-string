@inproceedings{10.1145/3607947.3608003,
author = {Verma, Rajeev and Pandey, Avinash Chandra},
title = {Improving Early Detection of Suicide Ideation using Oversampling Methods},
year = {2023},
isbn = {9798400700224},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3607947.3608003},
doi = {10.1145/3607947.3608003},
abstract = {According to the World Health Organization, suicide is a major social problem and is the fourth leading cause of death worldwide. Mental health, financial distress and loss of social ties are among the most common causes of suicide. With the widespread use of social media in the 21st century and the freedom of expression that comes with it, people with suicidal thoughts often share their thoughts through these digital platforms. Early detection of suicidal thoughts is essential to prevent harm and save lives. To this end, this article proposes an oversampling method to detect suicidal ideation. The proposed approach uses SMOTE and ADASYN techniques to equalize the sample size and then implements neural networks and machine learning models for early detection of suicidal thoughts. To evaluate the effectiveness of the proposed method, we apply it to balanced and unbalanced data sets and measure its precision, memory, F1 score and accuracy. In addition, we create the ROC curve to confirm the effectiveness of the proposed method. Our experimental results show that the proposed approach is superior to existing methods for suicidal ideation detection.},
booktitle = {Proceedings of the 2023 Fifteenth International Conference on Contemporary Computing},
pages = {282–288},
numpages = {7},
keywords = {Machine learning, Natural language processing, Oversampling, Social media, Suicidal ideation},
location = {Noida, India},
series = {IC3-2023}
}

@inproceedings{10.1145/3388818.3389158,
author = {Ben Ismail, Mohamed Maher},
title = {Local Ensemble Approach for Meningioma Tumor Firmness Detection in MRI Images},
year = {2020},
isbn = {9781450376952},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3388818.3389158},
doi = {10.1145/3388818.3389158},
abstract = {Determining if a Meningioma, which is a primary tumor of the brain, is firm or not guides patient counseling and the operative strategy to be adopted. In this paper we propose a novel approach for automatic firmness detection for Meningioma tumor. The proposed framework relies on a possibilistic based ensemble method to classify MRI image instances as firm or non-firm cases. The proposed algorithm minimizes some objective function which combines context identification and multi-algorithm ensemble criteria. The optimization is intended to learn contexts as compact clusters in subspaces of the visual feature space via possibilistic clustering and feature discrimination. The yields optimal ensemble parameters for each context. The experiments were conducted and assessed using a real dataset. The obtained performance proved that the proposed approach outperforms relevant state of the art methods.},
