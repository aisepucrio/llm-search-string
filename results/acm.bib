articleno = {55},
numpages = {10},
keywords = {COPD, OWL, ambient computing, bayesian network, chronic pulmonary disease, context-aware applications, healthcare system, na\"{\i}ve bayesian, prediction of relevant attributes of COPD disease, prediction systems, tele-medicine, ubiquitous computing},
