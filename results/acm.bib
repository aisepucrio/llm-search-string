keywords = {Internet of Things (IoT), matchmaking algorithms, semantic matchmaking, syntactic matchmaking, hybrid matchmaking, context-aware matchmaking, web service discovery, service-oriented architecture (SOA), peer-to-peer marketplace, blockchain}
}

