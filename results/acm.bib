@article{10.1145/3434643,
author = {Sharafi, Zohreh and Huang, Yu and Leach, Kevin and Weimer, Westley},
title = {Toward an Objective Measure of Developers’ Cognitive Activities},
year = {2021},
issue_date = {July 2021},
