@inproceedings{10.1145/2791060.2791116,
author = {Eichelberger, Holger and Schmid, Klaus},
title = {IVML: a DSL for configuration in variability-rich software ecosystems},
year = {2015},
isbn = {9781450336130},
publisher = {Association for Computing Machinery},
