@inproceedings{10.1145/3183440.3183480,
author = {Kr\"{o}her, Christian and El-Sharkawy, Sascha and Schmid, Klaus},
title = {KernelHaven: an experimentation workbench for analyzing software product lines},
year = {2018},
isbn = {9781450356633},
