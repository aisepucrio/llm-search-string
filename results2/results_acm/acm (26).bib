numpages = {6},
keywords = {software product line engineering, safety patterns, hardware/software co-design, automotive, ASIL validation},
location = {Florence, Italy},
series = {SPLC '14}
}

@inproceedings{10.5555/1715350.1715388,
author = {Wu, Zhi-Qiao and Jia-Fu, Tang and Li-Yan, Wang},
title = {An optimization framework for reuse component selection in software product line},
year = {2009},
isbn = {9781424427222},
publisher = {IEEE Press},
abstract = {We tackle the problem that selecting a series of components (simple reuse, build in-house or COTS) to satisfy a set of requirements within a budgetary constraint while maximize quality is becoming more difficult in the requirements phase. We study two main issues, analysis of optimal framework component selection process and survey on the activities of the entire software development in product line. Our search results introduce the framework based on decision variables indicating the set of architectural components to reuse scenario in order to pursue the highest quality while assuring a certain degree of satisfaction of the system requirements with a given cost budget. It also extends the quality properties to the non-functional requirement, such as reliability and delivery time.},
booktitle = {Proceedings of the 21st Annual International Conference on Chinese Control and Decision Conference},
pages = {1935–1939},
numpages = {5},
keywords = {software reuse, software reliability, software quality, software product line, optimization models},
